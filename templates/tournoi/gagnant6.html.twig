</form>

<script>
    document.getElementById('refresh-button').addEventListener('click', function () {
        fetch('{{ path("tournoiafficher_apres_midi6", {"id": poule.id}) }}?_=' + new Date().getTime(), {
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
            .then(response => {
                if (!response.ok) throw new Error('Erreur rÃ©seau');
                return response.text();
            })
            .then(html => {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');

                const newBody = doc.querySelector('body');
                if (newBody) {
                    document.body.innerHTML = newBody.innerHTML;

                    // âš ï¸ TrÃ¨s important : RÃ©attacher le listener au nouveau bouton
                    const newButton = document.getElementById('refresh-button');
                    if (newButton) {
                        newButton.addEventListener('click', arguments.callee);
                    }
                } else {
                    console.error('Body introuvable dans la rÃ©ponse');
                }
            })
            .catch(error => {
                console.error('Erreur lors de la mise Ã  jour :', error);
            });
    });
</script>

