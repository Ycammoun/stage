    <style>
        body {
            font-family: Arial, sans-serif;
            background: #fff;
            padding: 0px 20px 100px 20px; /* padding-bottom augment√© */
            margin-bottom: 200px;
        }

        .bracket {
            display: flex;
            flex-direction: column;
            gap: 100px;
            margin-bottom: 500px;
        }

        .match {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            position: relative;
        }

        .column {
            display: flex;
            flex-direction: column;
            gap: 30px;
            position: relative;
        }

        .team {
            width: 220px;
            border: 2px solid black;
            padding: 10px;
            background-color: #f2f2f2;
            text-align: center;
            font-weight: bold;
        }

        .winner {
            background-color: #d4edda;
        }

        .label {
            font-size: 12px;
            background: black;
            color: yellow;
            padding: 4px 8px;
            text-align: center;
            align-self: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1;
            border-radius: 4px;
        }

        /* Round 1 */
        .round1 {
            margin-left: 0;
            margin-bottom: -50px;
            margin-top: 100px;
        }

        /* Round 2 */
        .round2.matchB {
            margin-left: 300px;
            margin-top: -180px;
        }

        .round2.matchC {
            margin-left: 300px;
            margin-top: 80px;
        }

        .round2 .column {
            gap: 30px;
        }

        /* Round 3 - Finale */
        .round3 {
            margin-left: 600px;
            margin-top: -460px;
        }

        .round3 .column {
            gap: 250px;
        }

        /* Gagnant */
        .winner-box {
            margin-top: -700px;
            margin-left: 900px;
            padding: 20px;
            border: 3px solid green;
            background-color: #e6ffe6;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            max-width: 400px;
            border-radius: 8px;
        }

    </style>
</head>
<body>

