    {# Match pour la 3Ã¨me place entre perdants #}
    {% if m5 is defined and m5 %}
        <div class="winner-box" style="background-color: #b22222; color: white; margin-top: 20px; border-color: darkred;">
            ðŸ¥‰ Match pour la 3Ã¨me place :
            {{ m5.equipe1.nom }} ({{ m5.score1 }}) vs {{ m5.equipe2.nom }} ({{ m5.score2 }})
            <br>
            <strong>Classement 3Ã¨me place :</strong>
            {{ m5.score1 > m5.score2 ? m5.equipe1.nom : m5.equipe2.nom }}
        </div>
    {% else %}
        <div class="winner-box" style="background-color: #b22222; color: white; margin-top: 20px; border-color: darkred;">
            ðŸ¥‰ 5em place : Perdant match 1 {{ m1.score1 < m1.score2 ? m1.equipe1.nom : m1.equipe2.nom }}
        </div>
    {% endif %}
{% endif %}

{# Match 3áµ‰ place - entre perdants de m2 et m3 dans un box rouge #}
